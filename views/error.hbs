<style>
    .jumbotron {
        background: url('/static/img/404-error.jpg') top center no-repeat;
        background-size: cover;
        position: absolute;
        width: 100%;
        top: 0;
        left: 0;
        height: 100%;
        z-index: 6;
    }

    .jumbotron::after {
        background: rgba(0, 0, 0, 0.60);
        position: absolute;
        width: 100%;
        top: 0;
        left: 0;
        content: '';
        width: 100%;
        height: 100%;
        z-index: 7;
    }

    #disconnected {
        position: absolute;
        z-index: 8;
        color: #ffffff;
        top: 25%;
        margin: -50px auto 0;
        left: 0;
        right: 0;
        max-width: 750px;
    }

    #disconnected {
        margin: 2rem auto;
    }

    #disconnected pre {
        margin: 2rem 0;
        background: #efefef;
        width: 100%;
        white-space: pre-wrap;
        padding: 20px;
        word-break: break-word;
    }

    #disconnected .btn-primary {
        width: 100%;
        text-align: center;
        font-size: 1.75rem;
    }

    #disconnected ul {
        display: flex;
        justify-content: space-between;
    }

    #disconnected ul li a {
        width: 140px;
    }

    @media (max-width: 650px) {
        #disconnected {
            top: 2rem;
            margin-top: 0;
        }

        #disconnected ul {
            display: block;
        }

        #disconnected ul li {
            margin-top: 1.25rem;
        }

        #disconnected ul li:first-child {
            margin-top: 0;
        }

        #disconnected ul li a {
            width: 100%;
        }
    }
</style>
<section id="disconnected" class="container">
